@model IEnumerable<ElevatorSystem.Admin.Models.Entity.Category>

@{
    ViewBag.Title = "Index";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Category Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Categories</li>
                <li class="breadcrumb-item active">Index</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">List Categories</h5>
                        <p>Product categories help <code>identify</code> and <code>classify</code> products better. </p>

                        @* <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                                <i class="bi bi-collection me-1"></i>
                                A simple secondary alert with icon—check it out!
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>*@

                        @if (@TempData["CreateMessage"] != null)
                        {

                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Success !</strong>  @TempData["CreateMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (@TempData["UpdateMessage"] != null)
                        {

                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <i class="bi bi-info-circle me-1"></i>
                                <strong>Success !</strong>  @TempData["UpdateMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (@TempData["DeleteMessage"] != null)
                        {

                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <i class="bi bi-trash me-1"></i>
                                <strong>Success !</strong>  @TempData["DeleteMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }


                        <button type="button" style="margin-left:10px" class="btn btn-success rounded-pill mt-2 mb-2" onclick="location.href='@Url.Action("Create", "Categories")'"><i class="bi bi-plus-lg"> Add new</i></button>
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                                <tr>

                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                   
                                    
                                    <th scope="col">Created Date</th>
                                    <th scope="col">Modified Date</th>
                                  
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"> @Html.DisplayFor(modelItem => item.ID)</th>
                                        <td> @Html.DisplayFor(modelItem => item.Name)</td>
                                       
                                      
                                        <td> @Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                        <td> @Html.DisplayFor(modelItem => item.ModifiedAt)</td>
                                       
                                        <td class="col-3">
                                           
                                            <button type="button" class="btn btn-secondary m-1" title="Edit" onclick="location.href='@Url.Action("Edit", "Categories",new { id = item.ID })'"><i class="bi bi-pen"></i></button>
                                            <button type="button" class="btn btn-info m-1" title="Detail" onclick="location.href='@Url.Action("Details", "Categories",new { id = item.ID })'"><i class="bi bi-info-circle-fill"></i></button>
                                            <button type="button" class="btn btn-danger m-1" title="Delete" onclick="location.href='@Url.Action("Delete", "Categories",new { id = item.ID })'"><i class="bi bi-trash"></i></button>

                                        </td>
                                    </tr>
                                   
                                }
                            </tbody>

                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->