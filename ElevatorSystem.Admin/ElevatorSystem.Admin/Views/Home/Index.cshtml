    <script>
        var dataDate = [];
        var dataOrder = [];
        var arrayConvertData = [];


        function fetchData() {
            $.ajax({
                type: "GET",
                url: "/Charts/Result",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    dataDate = result.dataDate;
                    for (var i = 0; i < dataDate.length; i++) {
                        var converDate = dataDate[i].slice(6, 19);
                        var newDate = new Date(parseInt(converDate)).toISOString();
                        arrayConvertData.push(newDate)
                    }
                    for (var i = 0; i < result.dataOrder.length; i++) {
                        dataOrder.push(result.dataOrder[i]);
                    }

                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        fetchData();
        document.addEventListener("DOMContentLoaded", () => {
            new ApexCharts(document.querySelector("#reportsChart"), {
                series: [{
                    name: 'Sales',
                    data: dataOrder,
                }],
                chart: {
                    height: 350,
                    type: 'area',
                    toolbar: {
                        show: false
                    },
                },
                markers: {
                    size: 4
                },
                colors: ['#4154f1'],
                fill: {
                    type: "gradient",
                    gradient: {
                        shadeIntensity: 1,
                        opacityFrom: 0.3,
                        opacityTo: 0.4,
                        stops: [0, 90, 100]
                    }
                },
                dataLabels: {
                    enabled: false
                },
                stroke: {
                    curve: 'smooth',
                    width: 2
                },
                xaxis: {
                    type: 'datetime',
                    categories: arrayConvertData
                },
                tooltip: {
                    x: {
                        format: 'dd/MM/yy HH:mm'
                    },
                }
            }).render();
        });


    </script>

