@model ElevatorSystem.Admin.Models.Entity.Elevator

@{
    ViewBag.Title = "Delete";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Elevator Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Elevators</li>
                <li class="breadcrumb-item active">Delete elevator</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3">
                            <h5 class="card-title m-5">Are you sure you want to delete elevator <code style="font-size: 30px">#@Html.DisplayFor(model => model.ID). @Html.DisplayFor(model => model.Name)</code> ?</h5>
                            @if (@ViewData["InvalidStatus"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-octagon me-1"></i>
                                    <strong>Warning !</strong> @ViewData["InvalidStatus"] - The Status is <strong>@ViewData["elevatorStatus"]</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <!-- Floating Labels Form -->

                            <div class="form-group col-sm-12 d-flex">
                                <div class="col-md-4 ">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Category.Name)" disabled>
                                        <label for="floatingSelect">Category</label>
                                    </div>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Name)" disabled>
                                        <label for="floatingSelect">Elevator Name</label>
                                    </div>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.SKU)" disabled>
                                        <label for="floatingSelect">Stock Keeping Unit ( SKU )</label>
                                    </div>
                                </div>

                            </div>


                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">

                                <div class="col-md-4 ">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" value="@ViewData["elevatorStatus"]" disabled>
                                        <label for="floatingSelect">Status</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Capacity)" disabled>
                                        <span class="input-group-text">lbs</span>
                                    </div>
                                </div>

                                <div class="col-md-4 ">
                                    <div class="form-floating">

                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.MaxPerson)" disabled>
                                        <label for="floatingSelect">Maximum people</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">metres per sec</span>
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Speed)" disabled>
                                        <span class="input-group-text">(m/s)</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Price)" disabled>
                                        <span class="input-group-text">.00</span>
                                    </div>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Tag)" disabled>
                                        <label for="floatingSelect">Tag</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-11 ">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Thumbnails)" disabled>
                                        <label for="floatingSelect">Thumbnails</label>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-4 ">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Slug)" disabled>
                                        <label for="floatingSelect">Slug</label>
                                    </div>
                                </div>
                                <div class="col-md-8 ">
                                    <div class="form-floating">
                                        <input id="floatingTextarea" style="height: 100px;" type="text" class="form-control" value=" @Html.DisplayFor(model => model.Location)" disabled>
                                        <label for="floatingSelect">Location</label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-6 ">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.CreatedAt)" disabled>
                                        <label for="floatingSelect">Created Date</label>
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.UpdatedAt)" disabled>
                                        <label for="floatingSelect">Updated Date</label>
                                    </div>
                                </div>
                            </div>

                        </form>
                    <!-- End floating Labels Form -->
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#exampleModalCenter">Delete </button>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Elevators")'"><i class="bi arrow-left-circle">Back to list</i></button>
                    </div>
                        <!-- Modal -->
                        
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Are you absolutely sure about this?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <p onmousedown="return false;" onselect="return false;">Please type <strong>@Html.DisplayFor(model => model.Name)</strong> to confirm.</p>
                                            <input type="text" class="form-control input-block" id="verify" name="verify" pattern="@Html.DisplayFor(model => model.Name)" required />
                                        </div>
                                        <div class="modal-footer">
                                            <input type="submit" value="Comfirm Delete Elevator" id="submitDelete" disabled class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </section>


</main><!-- End #main -->
