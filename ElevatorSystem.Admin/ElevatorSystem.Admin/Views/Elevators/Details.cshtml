@model ElevatorSystem.Admin.Models.Entity.Elevator

@{ ViewBag.Title = "Details";
    var value = Model.ID;
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Elevator Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Elevators</li>
                <li class="breadcrumb-item active">Delete elevator</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <input value="@value" id="idElevator" style="display:none;" />
                        <h5 class="card-title m-5">Elevator <code style="font-size: 30px">#@Html.DisplayFor(model => model.ID). @Html.DisplayFor(model => model.Name)</code> </h5>
                        <div class="row justify-content-between" >
                            <div class="col-5">
                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block" style="width: 500px; height :400px;" src="/Content/Elevator/1653807538_product_l29.jpg" alt="First slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block" style="width: 500px;height:400px;" src="/Content/Elevator/941737779_product_l28.jpg" alt="Second slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block" style="width: 500px; height: 400px;" src="/Content/Elevator/1007286881_product_l27.jpg" alt="Third slide">
                                        </div>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                            <div class="col-5" >
                                <div id="Grid">
                                    <h3 class="elevate_name">Name:   </h3>
                                    <p>SKU (Stock Keeping Unit): <spans>@Model.SKU</spans></p>
                                    <p>Slug: <spans class="elevate_slug"></spans></p>
                                    <p>Price: <span class="elevate_price"></span>VND </p>
                                    <p>Max Persion: <span class="elevate_maxPerson"></span> </p>
                                    <p>Localtion: <span class="elevate_localtion"></span> </p>
                                    <p>Tag:  <span class="elevate_tag"></span> </p>
                                    <p>Description: <span class="elevate_desc"></span> </p>
                                </div>
                               

                                <div class=" d-flex">
                                    <button type="button" class="btn btn-secondary m-1" title="Edit" onclick="location.href='@Url.Action("Edit", "Elevators",new { id = value})'">Update</button>
                                    <button type="button" class="btn btn-success m-1" title="Edit" onclick="location.href='@Url.Action("Index", "Elevators")'">Back</button>
                                    @using (Html.BeginForm("ExportDoc", "Elevators", new { elevatorName = Model.Name }, FormMethod.Post))
                                    {

                                            <input type="hidden" name="GridHtml" />
                                            <button type="submit" class="btn btn-secondary m-1" id="btnSubmit" value="Export"><i style="font-size:18px;" class='bx bxs-file-doc'>Export Elevator details</i></button>
                                    }
                                </div>
                              
                            </div>
                        </div>

                        <!-- End floating Labels Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>
</main><!-- End #main -->

@section Scripts {
    <script src="~/Scripts/Views/detail-elevator.js"></script>
}


@section Scripts1 {
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#Grid").html());

            });
        });
    </script>
}