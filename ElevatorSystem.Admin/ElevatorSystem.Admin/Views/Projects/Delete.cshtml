@model ElevatorSystem.Admin.Models.Entity.Project

@{
    ViewBag.Title = "Delete";
}



<main id="main" class="main">

    <div class="pagetitle">
        <h1>Project Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Projects</li>
                <li class="breadcrumb-item active">Delete project</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <form class="row g-3">
                    <div class="card basic">
                        <div class="card-body">
                            <h5 class="card-title m-5">Are you sure you want to delete project <strong style="font-size: 25px">#@Html.DisplayFor(model => model.ID). @Html.DisplayFor(model => model.Name)</strong> ? </h5>
                            @if (@ViewData["InvalidStatus"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-octagon me-1"></i>
                                    <strong>Warning !</strong> @ViewData["InvalidStatus"] - The Status is <strong>@ViewData["projectStatus"]</strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            <div class="form-group col-sm-12 d-flex">
                                <div class="col-md-6">
                                    <img src="@Html.DisplayFor(model => model.Images)" style="height:800px ;" class="card-img-top" alt="...">
                                </div>
                                <div class="col-md-6">

                                    <h3 class="card-title">Name: @Html.DisplayFor(model => model.Name)  </h3>
                                    @*  <p>Order SKU: <span>@Html.DisplayFor(model => model.Order.SKU)</span> </p>
                            <p>Customer name: <span>@Html.DisplayFor(model => model.Order.FullName)</span> </p>*@
                                    <p><strong>Description:</strong> <span>@Html.DisplayFor(model => model.Description)</span> </p>
                                    <p><strong>Title:</strong> <spans>@Html.DisplayFor(model => model.Title)</spans></p>
                                    <p><strong>Status:</strong> <spans>@ViewData["projectStatus"]</spans></p>
                                    <p><strong>Started date:</strong> <span>@Html.DisplayFor(model => model.StartDate)</span>VND </p>
                                    <p><strong>Ended date:</strong> <span>@Html.DisplayFor(model => model.EndDate)</span> </p>
                                    <p><strong>Partner:</strong> <span>@Html.DisplayFor(model => model.Partner)</span> </p>
                                    <p><strong>Term:</strong>  <span>@Html.DisplayFor(model => model.Term)</span> </p>
                                    <p><strong>Description:</strong> <span>@Html.DisplayFor(model => model.Description)</span> </p>
                                    <p><strong>Created date:</strong> <span>@Html.DisplayFor(model => model.CreatedAt)</span> </p>
                                    <p><strong>Modified date:</strong> <span>@Html.DisplayFor(model => model.UpdatedAt)</span> </p>

                                </div>
                            </div>

                        </div>

                    </div>

                </form>
                <!-- End floating Labels Form -->
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#exampleModalCenter">Delete </button>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Projects")'"><i class="bi arrow-left-circle">Back to list</i></button>
                    </div>
                    <!-- Modal -->

                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Are you absolutely sure about this?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body text-center">
                                    <p onmousedown="return false;" onselect="return false;">Please type <strong>@Html.DisplayFor(model => model.Name)</strong> to confirm.</p>
                                    <input type="text" class="form-control input-block" id="verify" name="verify" pattern="@Html.DisplayFor(model => model.Name)" required />
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Comfirm Delete Project" id="submitDelete" disabled class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </section>
</main><!-- End #main -->
