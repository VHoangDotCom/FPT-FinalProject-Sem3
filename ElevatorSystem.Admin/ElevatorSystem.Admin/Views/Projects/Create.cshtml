@model ElevatorSystem.Admin.Models.Entity.Project

@{
    ViewBag.Title = "Create";
}


<main id="main" class="main">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="pagetitle">
            <h1>Project management</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                    <li class="breadcrumb-item">Projects</li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Create new Project ( from Order @*#@TempData["ID"] *@ '@TempData["OrderSKU"]'   )</h5>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <!-- Floating Labels Form -->
                        <form class="row g-3">


                            <div class="form-group col-sm-12 d-flex">
                                <div class="col-md-6 ">
                                    <div class="form-floating">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "floatingName", @placeholder = "Project name" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @for = "floatingName" })

                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-floating">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @id = "floatingName", @placeholder = "Project title" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @for = "floatingName" })

                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @Html.DropDownListFor(model => model.Status,
                                               new List<SelectListItem>
                                               {
                                                   new SelectListItem {Value = "0", Text="Upcoming"},
                                                   new SelectListItem {Value = "1", Text="Pending"},
                                                   new SelectListItem {Value = "2", Text="Overdue"},
                                                   new SelectListItem { Value = "3", Text = "Not started" },
                                                   new SelectListItem { Value = "4", Text = "Active" },
                                                   new SelectListItem { Value = "5", Text = "Priority" },
                                                   new SelectListItem { Value = "6", Text = "Canceled" },
                                               },
                                         htmlAttributes: new { @class = "form-select", @id = "floatingStatus" })
                                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        <label for="floatingSelect">Status</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">

                                        @Html.EditorFor(model => model.Images, new { htmlAttributes = new { @class = "form-control", @id = "floatingName", @placeholder = "@Please enter Image link" } })
                                        @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Images, htmlAttributes: new { @for = "floatingName" })
                                    </div>
                                </div>


                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-6">
                                    <div class="form-floating">

                                        @Html.EditorFor(model => model.Partner, new { htmlAttributes = new { @class = "form-control", @id = "floatingTextarea", @placeholder = "Partner information", @style = "height: 100px;" } })
                                        @Html.ValidationMessageFor(model => model.Partner, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Partner, htmlAttributes: new { @for = "floatingTextarea" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-floating">

                                        @Html.EditorFor(model => model.Term, new { htmlAttributes = new { @class = "form-control", @id = "floatingTextarea", @placeholder = "Term & conditions", @style = "height: 100px;" } })
                                        @Html.ValidationMessageFor(model => model.Term, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Term, htmlAttributes: new { @for = "floatingTextarea" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-sm-12 d-flex" style="margin-top:30px">
                                <div class="col-md-12">
                                    <div class="form-floating">

                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @id = "floatingTextarea", @placeholder = "Tag description", @style = "height: 100px;" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @for = "floatingTextarea" })
                                    </div>
                                </div>
                            </div>


                            <div class="form-group col-sm-12 d-flex">
                                <div class="row mb-3 m-3 col-md-6">
                                    <label for="inputDate" class="col-sm-3 col-form-label">Started date</label>
                                    <div class="col-sm-8">
                                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>

                                <div class="row mb-5 m-3 col-md-6">
                                    <label for="inputDate" class="col-sm-3 col-form-label">Ended date</label>
                                    <div class="col-sm-8">
                                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                </div>
                            </div>


                            <div class="form-group col-sm-12" style="margin-top:30px">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Contrast document</h5>
                                        @Html.TextAreaFor(model => model.ContractDocument, new { @class = "tinymce-editor" })

                                    </div>
                                </div>
                            </div>




                            <div class="text-center">
                                <button type="submit" value="Create" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                                <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Orders")'">Back to Orders</button>
                            </div>

                        </form><!-- End floating Labels Form -->
                           
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

</main><!-- End #main -->
