@model ElevatorSystem.Admin.Models.Entity.Blog

@{
    ViewBag.Title = "Delete";
}
@**@


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Blog Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Blogs</li>
                <li class="breadcrumb-item active">Delete blog</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form class="row g-3">
                            <h5 class="card-title m-5">Are you sure you want to delete blog <strong>@Html.DisplayFor(model => model.Title). @Html.DisplayFor(model => model.Title)</strong> ?</h5>

                            <!-- Floating Labels Form -->
                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Blog title</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Title)" disabled>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Blog description</label>
                                <div class="col-sm-6">
                                    <textarea class="form-control" placeholder=" @Html.DisplayFor(model => model.Summary)" disabled id="floatingTextarea" style="height: 100px;"></textarea>

                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Slug</label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Slug)" disabled>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Thumbnail</label>
                                <div class="col-sm-6">
                                    <img src="@Html.DisplayFor(model => model.Thumbnail)" width="100"/>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <label class="col-sm-4 col-form-label">Publish status</label>
                                <div class="col-sm-6">

                                    @{
                                        if (ViewBag.CheckStatus == true)
                                        {
                                            @Html.DisplayFor(model => model.IsPublished)
                                            <label class="row-cols-sm-6 col-form-label">Activated</label>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.IsPublished)
                                            <label class="row-cols-sm-6 col-form-label">Not Activated</label>
                                        }
                                    }

                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Published date</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.PublishedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Created date</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Modified date</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.ModifiedAt, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputDate" class="col-sm-4  col-form-label">Tag</label>
                                    <div class="col-sm-6 m-1">
                                        @Html.DisplayFor(model => model.Tag.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                </div>

                                <div class="col-sm-12 m-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Blog's content</h5>
                                            <textarea class="tinymce-editor">
                                           @Html.DisplayFor(model => model.PostContent ,new { htmlAttributes = new { @disabled = true } })
                                        </textarea><!-- End TinyMCE Editor -->
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                        <!-- End floating Labels Form -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                    <div class="form-actions no-color text-center">
                        <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#exampleModalCenter">Delete </button>
                        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Blogs")'"><i class="bi arrow-left-circle">Back to list</i></button>
                    </div>
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Are you absolutely sure about this?</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <p onmousedown="return false;" onselect="return false;">Please type <strong>@Html.DisplayFor(model => model.Title)</strong> to confirm.</p>
                                            <input type="text" class="form-control input-block" id="verify" name="verify" pattern="@Html.DisplayFor(model => model.Title)" required />
                                        </div>
                                        <div class="modal-footer">
                                            <input type="submit" value="Comfirm Delete Blog" id="submitDelete" disabled class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>


</main><!-- End #main -->