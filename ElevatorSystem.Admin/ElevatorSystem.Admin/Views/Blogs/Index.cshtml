@model IEnumerable<ElevatorSystem.Admin.Models.Entity.Blog>

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Blog Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Blogs</li>
                <li class="breadcrumb-item active">Index</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">List Blogs</h5>
                        <p><code>Blog posts</code> will help customers have a better view of the company and its product line. At the same time, blogs are also a means to share and give suggestions to customers about <code>products</code>. </p>

                      
                        @if (@TempData["CreateMessage"] != null)
                        {

                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle me-1"></i>
                                <strong>Success !</strong>  @TempData["CreateMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (@TempData["UpdateMessage"] != null)
                        {

                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                <i class="bi bi-info-circle me-1"></i>
                                <strong>Success !</strong>  @TempData["UpdateMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (@TempData["DeleteMessage"] != null)
                        {

                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <i class="bi bi-trash me-1"></i>
                                <strong>Success !</strong>  @TempData["DeleteMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }


                        <button type="button" style="margin-left:10px" class="btn btn-success rounded-pill mt-2 mb-2" onclick="location.href='@Url.Action("Create", "Blogs")'"><i class="bi bi-plus-lg"> Add new</i></button>
                        <!-- Table with stripped rows -->
                        <table class="table datatable table-striped">
                            <thead>
                                <tr>

                                    <th scope="col">#</th>
                                    <th scope="col">Tag</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Thumbnail</th>
                                    <th scope="col">Publish date</th>
                                   
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <th scope="row"> @Html.DisplayFor(modelItem => item.ID)</th>
                                    <td> @Html.DisplayFor(modelItem => item.Tag.Title)</td>
                                    <td> @Html.DisplayFor(modelItem => item.Title)</td>
                                    <td><img src=" @Html.DisplayFor(modelItem => item.Thumbnail)" style="width:100px; height:120px;" /></td>
                                    <td> @Html.DisplayFor(modelItem => item.PublishedAt)</td>
                                   
                                    <td class="col-3">
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |*@
                                        @*  @Html.ActionLink("Details", "Details", new { id = item.ID }) |*@
                                        @* @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                                        <button type="button" class="btn btn-secondary m-1" title="Edit" onclick="location.href='@Url.Action("Edit", "Blogs",new { id = item.ID })'"><i class="bi bi-pen"></i></button>
                                        <button type="button" class="btn btn-info m-1" title="Detail" onclick="location.href='@Url.Action("Details", "Blogs",new { id = item.ID })'"><i class="bi bi-info-circle-fill"></i></button>
                                        <button type="button" class="btn btn-danger m-1" title="Delete" onclick="location.href='@Url.Action("Delete", "Blogs",new { id = item.ID })'"><i class="bi bi-trash"></i></button>

                                    </td>
                                </tr>
                                   
                                }
                            </tbody>

                        </table>
                        <!-- End Table with stripped rows -->
                        <a href="@Url.Action("ExportToExcel","Blogs")">Export Excel</a>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->