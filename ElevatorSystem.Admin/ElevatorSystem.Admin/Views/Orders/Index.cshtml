@model IEnumerable<ElevatorSystem.Admin.Models.Entity.Order>
@*@Html.Partial("_HeadPartialOrder")*@

@{
    ViewBag.Title = "Index";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Order Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Orders</li>
                <li class="breadcrumb-item active">Index</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">List Orders</h5>
                        <p>
                            E-commerce order management is the process of tracking an order from the initial <code>purchase transaction</code>,
                            through the entire fulfillment process, to the point a customer <code>receives their goods</code>.
                        </p>

