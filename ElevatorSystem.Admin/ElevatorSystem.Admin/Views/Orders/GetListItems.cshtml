<main id="main" class="main">

    <div class="pagetitle">
        <h1>Order Management</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                <li class="breadcrumb-item">Order Items</li>
                <li class="breadcrumb-item active">List Order Items</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order <strong>#@ViewBag.id.  @ViewBag.sku</strong></h5>


                        <table class="table datatable table-striped">
                            <thead>
                                <tr>

                                    <th scope="col">#</th>

                                    <th scope="col">Order code</th>
                                    <th scope="col">Elevator name</th>
                                    <th scope="col">Number of floors</th>
                                    <th scope="col">Quantity</th>


                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row"> @Html.DisplayFor(modelItem => item.ID)</th>

                                        <td> @Html.DisplayFor(modelItem => item.Order.SKU)</td>

                                        <td> @Html.DisplayFor(modelItem => item.Elevator.Name)</td>

                                        <td> @Html.DisplayFor(modelItem => item.NumberOfFloor)</td>
                                        <td> @Html.DisplayFor(modelItem => item.Quantity)</td>

                                    </tr>

                                }
                            </tbody>

                        </table>
                        <!-- End Table with stripped rows -->
                        <div class="text-center">
                           
                            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Orders")'">Back to list</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->